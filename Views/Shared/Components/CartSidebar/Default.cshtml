@model List<Cart>

<div>
    <ul>
        @if (Model == null || !Model.Any())
        {
            <li class="nav-item">No items in cart</li>
        }
        else
        {
            foreach (var cart in Model)
            {
                <li class="nav-item">Cart ID: @cart.Id</li>


                <!-- Loop through BookingDining -->
                @if (cart.BookingDinings != null && cart.BookingDinings.Any())
                {
                    <li class="nav-item"><strong>Dining Bookings:</strong></li>
                    foreach (var dining in cart.BookingDinings)
                    {
                        <li><img src="@dining.Dining.Images" alt="Dining image" /></li>
                        <li class="nav-subitem">@dining.Dining.Name</li>
                        <li class="nav-subitem">Date: @dining.Date</li>
                        <li class="nav-subitem"> Price: @dining.Price</li> <!-- Adjust as per the actual properties -->
                    }
                }
                else
                {
                    <li class="nav-subitem">No Dining Bookings</li>
                }

                <!-- Loop through BookingRoom -->
                @if (cart.BookingRooms != null && cart.BookingRooms.Any())
                {
                    <li class="nav-item"><strong>Room Bookings:</strong></li>
                    foreach (var room in cart.BookingRooms)
                    {
                        <li class="nav-subitem">Room Type: @room.HotelRoom.HotelRoomType.Name</li>
                        <li><img src="@room.HotelRoom.HotelRoomType.Images" /></li>
                        <li class="nav-subitem">Check-in: @room.CheckInDate</li>
                        <li class="nav-subitem">Check-out: @room.CheckOutDate</li>
                        <li class="nav-subitem">Price: @room.TotalPrice</li>
                    }
                }
                else
                {
                    <li class="nav-subitem">No Room Bookings</li>
                }

                <!-- Loop through BookingExperience -->
                @if (cart.BookingExperiences != null && cart.BookingExperiences.Any())
                {
                    <li class="nav-item"><strong>Experience Bookings:</strong></li>
                    foreach (var experience in cart.BookingExperiences)
                    {
                        <li><img src="@experience.Experience.CoverImage" alt="Dining image" /></li>
                        <li class="nav-subitem">@experience.Experience.Name</li>
                        <li class="nav-subitem">Date: @experience.Date</li>
                        <li class="nav-subitem"> Price: @experience.Price</li> <!-- Adjust as per the actual properties -->
                    }
                }
                else
                {
                    <li class="nav-subitem">No Experience Bookings</li>
                }
                <li class="nav-item">Shipping Price: @cart.ShippingPrice</li>
            }
        }
    </ul>

    <div class="header-configure-area">
        <a href="./Cart/ConfirmCart" class="bk-btn">Confirm Cart</a>
    </div>

</div>

