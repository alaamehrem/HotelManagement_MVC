@model List<UserViewModel>
@{
    ViewData["Title"] = "Data Table";
    Layout = "_Dashboard";
}

<!-- Breadcrumb Section Begin -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-text">
                <h2>Users Data</h2>
                <div class="bt-option">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <span>Users Data</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section Begin -->

<div class="container">
    <h3>User Data</h3>
    <br />
    <form asp-action="Index" asp-controller="User" method="get">
        <div class="row input-group">
            <input type="text" name="search" id="search" class="form-control" placeholder="Search" />
            <input type="submit" value="Search" class="btn btn-primary" style="background-color: #DFA974; border:none" />
        </div>
    </form>
    <br />
    <a class="btn btn-success" style="background-color: #DFA974; border:none" href="/Offer/New">New</a>
    <br />
    <br />
    <table class="table table-bordered table-hover">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name </th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FName</td>
                <td>@item.LName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td><a href="/User/Details?id=@item.Id">Details</a></td>
                <td><a class="btn btn-success" style="background-color: #DFA974; border:none" href="/User/Edit/@item.Id">Edit</a></td>
                <td><a class="btn btn-danger" href="/User/Delete/@item.Id">Delete</a></td>
            </tr>
        }
    </table>
</div>
