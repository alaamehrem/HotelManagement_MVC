@model Offer
@{
    ViewData["Title"] = "Delete";
    Layout = "_Dashboard";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-text">
                <h2>Delete Offer</h2>
                <div class="bt-option">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-area="" asp-controller="Offer" asp-action="Index">Offer table</a>
                    <span>Delete</span>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!-- Room Details Section Begin -->

<div class="container">
    <h3>Are you sure you want to delete Offer @Model.OfferName?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Id">Id: </label>
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                <label asp-for="OfferName">Offer Name: </label>
            </dt>
            <dd class="col-sm-10">
                @Model.OfferName
            </dd>
            <dt class="col-sm-2">
                <label asp-for="OfferDescription">Description: </label>
            </dt>
            <dd class="col-sm-10">
                @Model.OfferDescription
            </dd>
            <dt class="col-sm-2">
                <label asp-for="OfferImage">Image: </label>
            </dt>
            <dd class="col-sm-10">
                <img src="/Images/offer/@Model.OfferImage" style="height:300px; width:300px;">
            </dd>         
            <dt class="col-sm-2">
                <label asp-for="OfferPrice">Price </label>
            </dt>
            <dd class="col-sm-10">
                @Model.OfferPrice /Pernight
            </dd>           
        </dl>

        <form method="post" action="/Offer/ConfirmDelete/@Model.Id">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" asp-controller="Offer">Back to List</a>
        </form>
    </div>
</div>
<br />