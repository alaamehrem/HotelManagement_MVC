@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "_Index";
}

<!-- Breadcrumb Section Begin -->
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="breadcrumb-text">
				<h2>Forget Password</h2>
				<div class="bt-option">
					<a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
					<a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
					<span>Forget Password</span>
				</div>
			</div>
		</div>
	</div>
</div>
<br />

<div class="wrapper" style="background-image: url('/images/log.jpg');">
	<div class="innerlogin">
		<form asp-action="SendEmail" asp-controller="Account" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="All" class="text-danger"></div>
			<h3>Forget Password</h3>
	
			<div class="form-wrapper">
				<input asp-for="Email" placeholder="Email" class="form-control">
				<i class="zmdi zmdi-email"></i>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
		
			<button style="background-color: #DFA974; border:none; margin-top:20px; margin-bottom:15px;">
				Send e-mail
				<i class="zmdi zmdi-arrow-right"></i>
			</button>
		</form>
	</div>
</div>
<br />


