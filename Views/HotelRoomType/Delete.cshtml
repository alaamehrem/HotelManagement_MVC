@model HotelRoomType

@{
    ViewData["Title"] = "Delete";
    Layout = "_Dashboard";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-text">
                <h2>Delete Room</h2>
                <div class="bt-option">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-area="" asp-controller="HotelRoomType" asp-action="RoomTypes">Rooms</a>
                    <span>Delete</span>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!-- Room Details Section Begin -->

    <div class="container">
<h3>Are you sure you want to delete room type @Model.Name?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           <label asp-for="Id"> </label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Id
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Name"> </label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Description"> </label>
        </dt>
        <dd class = "col-sm-10">
           @Model.Description
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Images"> </label>
        </dt>
        <dd class = "col-sm-10">
                <img src="/Images/RoomType/@Model.Images" style="height:300px; width:300px;">
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="BedCount"> </label>
        </dt>
        <dd class = "col-sm-10">
           @Model.BedCount
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="BathCount"> </label>
        </dt>
        <dd class = "col-sm-10">
            @Model.BathCount
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="MaxGuestCount"> </label>
        </dt>
        <dd class = "col-sm-10">
            @Model.MaxGuestCount
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Price"> </label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Price
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Area"> </label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Area
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="BedType"> </label>
        </dt>
        <dd class = "col-sm-10">
            @Model.BedType
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="View"> </label>
        </dt>
        <dd class = "col-sm-10">
            @Model.View
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Decor">Decoration</label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Decor
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="UniqueFeatures"> </label>
        </dt>
        <dd class = "col-sm-10">
            @Model.UniqueFeatures
        </dd>
    </dl>

        <form method="post" action="/HotelRoomType/ConfirmDelete/@Model.Id">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="HotelRoomType">Back to List</a>
    </form>
</div>
</div>
<br />