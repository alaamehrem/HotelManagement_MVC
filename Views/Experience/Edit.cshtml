@model Experience

@{
    ViewData["Title"] = "Edit";
    Layout = "_Index";
}

<!-- Breadcrumb Section Begin -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-text">
                <h2>Edit Experience</h2>
                <div class="bt-option">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-area="" asp-controller="Experience" asp-action="Index">All Experiences</a>
                    <span>Edit</span>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!-- Breadcrumb Section End -->

<!-- Blog Section Begin -->
<div class="container">

    <h4>Edit Experience</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" action="/Experience/SaveEdit/@Model.Id" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <img src="/Images/Experience/@Model.Image" alt="">
                    <input Name="FileImage" type="file" class="form form-control" style="border:none; outline:none;" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CoverImage" class="control-label"></label>
                    <img src="/Images/Experience/@Model.CoverImage" alt="">
                    <input Name="FileCoverImage" type="file" class="form form-control" style="border:none; outline:none;" />
                    <span asp-validation-for="CoverImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select name="Type" id="Type" class="form form-control">
                        @if (Model.Type != null && Model.Type.Experiences != null)
                        {
                            foreach (var typeItem in Model.Type.Experiences)
                            {
                                if (Model.TypeId == typeItem.Id)
                                {
                                    <option value="@typeItem.Id" selected>@typeItem.Name</option>
                                }
                                else
                                {
                                    <option value="@typeItem.Id">@typeItem.Name</option>
                                }
                            }
                        }
                        else
                        {
                            <option value="">No Types Available</option>
                        }
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="Experience" class="btn-light">Back to List</a>
    </div>
</div>

