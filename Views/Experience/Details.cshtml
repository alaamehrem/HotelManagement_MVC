
 @model Experience

@{
    ViewData["Title"] = "Details";
    Layout = "_Index";
    var today = DateTime.Today.ToString("MM-dd-yyyy");
}

<!-- Blog Details Hero Section Begin -->
<section class="blog-details-hero set-bg" data-setbg="/Images/Experience/@Model.CoverImage">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="bd-hero-text">
                    <span>@Model.Type.Name</span>
                    <h2>@Model.Name</h2>
                    <ul>
                        <li class="b-time" style="color:white;background-color:#DFA974;"><i class="icon_clock_alt"></i> @Model.Duration</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->
<!-- Breadcrumb Section Begin -->
<br />
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Experience</h2>
                    <div class="bt-option">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a asp-area="" asp-controller="Experience" asp-action="Experiences">All Experiences</a>
                        <span>Experience Details</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
<!-- Breadcrumb Section End -->
<!-- Blog Details Section Begin -->
<section class="room-details-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="room-details-item">
                    <img src="/Images/Experience/@Model.Image" alt="">
                    <div class="rd-text">
                        <div class="rd-title">
                            <h3>@Model.Name</h3>
                            <div class="rdt-right">
                                <div class="rating">
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star-half_alt"></i>
                                </div>
                                <a href="#">Booking Now</a>
                            </div>
                        </div>
                        <h2>@Model.Price<span>/PerPerson</span></h2>

                        <p class="f-para">
                            <h3 style="color:#DFA974;">Description</h3>
                            @Model.Description
                        </p>
                        <p class="f-para">
                            <h3 style="color:#DFA974;">Requirements</h3>
                            <ul id="requirements">
                            </ul>
                        </p>
                        <p class="f-para">
                            <h3 style="color:#DFA974;">Instructions</h3>
                            @Model.instructions
                        </p>
                        <br />
                        <a class="btn btn-success" style="background-color: #DFA974; border:none" href="/Experience/Experiences">Back to all experiences</a>
                        <br/>
                        <br />

                    </div>
                    <div class="rd-reviews">
                        <h4>Reviews</h4>
                        <div class="review-item">
                            <div class="ri-pic">
                                <img src="/img/room/avatar/avatar-1.jpg" alt="">
                            </div>
                            <div class="ri-text">
                                <span>27 Aug 2023</span>
                                <div class="rating">
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star-half_alt"></i>
                                </div>
                                <h5>Brandon Kelley</h5>
                                <p>
                                    I recently stayed at Hotel booking and had a fantastic experience booking a room.
                                    The process was smooth, and the room exceeded my expectations. The online booking system was user-friendly,
                                    allowing me to select my preferred dates, room type, and any additional amenities with ease.
                                </p>
                            </div>
                        </div>
                        <div class="review-item">
                            <div class="ri-pic">
                                <img src="/img/room/avatar/avatar-2.jpg" alt="">
                            </div>
                            <div class="ri-text">
                                <span>27 Jan 2024</span>
                                <div class="rating">
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star-half_alt"></i>
                                </div>
                                <h5>Brandon Kelley</h5>
                                <p>
                                    I recently had the pleasure of booking a hotel room at Hotel booking,
                                    and I must say, it was an exceptional experience.
                                    From the moment I initiated the booking process to the end of my stay, everything was seamless and enjoyable.
                                </p>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>

            <div class="col-lg-4">
                <div class="room-booking">
                    <h3>Your Reservation</h3>
                    <form asp-action="SaveNew" asp-controller="BookingExperience" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="Date">
                            <label asp-for="Date">Choose date:</label>
                            <input asp-for="Date" onselect="Date" class="date-input" id="date-in" value="@today">
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                        <div class="select-option">
                            <label for="NumAdults">Guests:</label>
                            <select asp-for="NumAdults">
                                <option value="1">1 Adult</option>
                                <option selected value="2">2 Adults</option>
                                <option value="3">3 Adults</option>
                                <option value="4">4 Adults</option>
                                <option value="5">5 Adults</option>
                                <option value="6">6 Adults</option>
                            </select>
                        </div>
                        <button type="submit">Check Availability</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var requirementsDiv = document.getElementById("requirements");
        var requirementsText = "@Model.Requirements";

        if (requirementsDiv && requirementsText) {
            var requirements = requirementsText.split('.').filter(function (item) {
                return item.trim() !== '';
            }).map(function (item) {
                return item.trim();
            });

            requirementsDiv.innerHTML = requirements.map(function (item) {
                return '<li>' + item + '.</li>';
            }).join('');
        }
    });
</script>
