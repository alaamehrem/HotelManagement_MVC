@model Experience

@{
    ViewData["Title"] = "New";
    Layout = "_Index";
}

<!-- Breadcrumb Section Begin -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-text">
                <h2>Create New Experience</h2>
                <div class="bt-option">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-area="" asp-controller="Experience" asp-action="Index">All Experiences</a>
                    <span>Create New</span>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!-- Breadcrumb Section End -->

<!-- Blog Section Begin -->
<section class="blog-section blog-page spad">

    <div class="container">
        <h3>Experience Form</h3>
        <br />
        <form asp-action="SaveNew" asp-controller="Experience" method="post" enctype="multipart/form-data">
            <div>
                <label asp-for="Name"> </label>
                <input asp-for="Name" class="form form-control" />
            </div>
            <div>
                <label asp-for="Image"> </label>
                <input Name="FileImage" type="file" class="form form-control" style="border:none; outline:none;" />
            </div>
            <br />
            <div>
                <label asp-for="CoverImage"> </label>
                <input Name="FileCoverImage" type="file" class="form form-control" style="border:none; outline:none;" />
            </div>
            <br />
            <div>
                <label asp-for="Type"> </label>
                <input asp-for="Type" class="form form-control" />
            </div>
            <div>
                <label asp-for="Description"> </label>
                <input asp-for="Description" class="form form-control" />
            </div>
            <div>
                <label asp-for="Price"> </label>
                <input asp-for="Price" class="form form-control" />
            </div>
            <div>
                <label asp-for="Duration"> </label>
                <input asp-for="Duration" class="form form-control" />
            </div>
            <br />
            <input type="submit" value="Create" class="btn btn-success" />
        </form>
        <br />
        <a asp-action="Index" asp-controller="Experience" class="b-tag">Back to list</a>
    </div>
</section>

