@model Dining

@{
    ViewData["Title"] = "Delete";
    Layout = "_Dashboard";

}

<!-- Breadcrumb Section Begin -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-text">
                <h2>Edit Experience</h2>
                <div class="bt-option">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-area="" asp-controller="Dining" asp-action="AllDining">All Dinings</a>
                    <span>Edit</span>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!-- Breadcrumb Section End -->

<!-- Blog Section Begin -->
<div class="container">
    <h3>Are you sure you want to delete Dining @Model.Name?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Id"> </label>
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Name"> </label>
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Images"> </label>
            </dt>
            <dd class="col-sm-10">
                <img src="/Images/Experience/@Model.Images" alt="">
            </dd>
@*             <dt class="col-sm-2">
                <label asp-for="Type"> </label>
            </dt>
            <dd class="col-sm-10">
                @Model.Type.Name
            </dd> *@
            <dt class="col-sm-2">
                <label asp-for="Description"> </label>
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Price"> </label>
            </dt>
            <dd class="col-sm-10">
                @Model.Price
            </dd>
            <dt class="col-sm-2">
                <label asp-for="Duration"> </label>
            </dt>
            <dd class="col-sm-10">
                @Model.Duration
            </dd>
            <dt class="col-sm-2">
                <label asp-for="TimeOfDay"> </label>
            </dt>
            <dd class="col-sm-10">
                @Model.TimeOfDay
            </dd>
           
        </dl>

        <form method="post" action="/Dining/ConfirmDelete/@Model.Id">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="GetAll" asp-controller="Dining" class="b-tag">Back to List</a>
        </form>
    </div>
</div>
