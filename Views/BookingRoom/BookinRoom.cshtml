@model HotelManagement_MVC.Models.BookingRoom

@{
    ViewData["Title"] = "BookingRoom";
    Layout = "_Index";
}
<!-- Breadcrumb Section Begin -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-text">
                <h2>Room Reservation</h2>
                <div class="bt-option">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-area="" asp-controller="RoomType" asp-action="RoomTypes">Room Type</a>
                    <span>Room Booking</span>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<section class="room-details-section spad">
    <div class="container">
        <h3>Room Booking</h3>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="BookingRoom">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="HotelRoom" class="control-label">Room Type</label>
                        <input asp-for="HotelRoom" class="form-control" />
                        <select id="HotelRoomId" class="form form-control" onchange="LoadRooms()" name="HotelRoomId">
                            @foreach (var Roomitem in Model.HotelRoom.HotelRoomType)
                            {
                                if (Model.Dept_Id == Deptitem.Id)
                                {
                                    <option value="@Deptitem.Id" selected>@Deptitem.Name</option>
                                }
                                else
                                {
                                    <option value="@Deptitem.Id">@Deptitem.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="HotelRoomId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumOfRooms" class="control-label">Number of Rooms</label>
                        <input asp-for="NumOfRooms" class="form-control" />
                        <span asp-validation-for="NumOfRooms" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OfferId" class="control-label">Offer Meal </label>
                        <input asp-for="OfferId" class="form-control" />
                        <span asp-validation-for="OfferId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CheckInDate" class="control-label"></label>
                        <input asp-for="CheckInDate" class="form-control" />
                        <span asp-validation-for="CheckInDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CheckOutDate" class="control-label"></label>
                        <input asp-for="CheckOutDate" class="form-control" />
                        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumAdults" class="control-label">Number of Adults</label>
                        <input asp-for="NumAdults" class="form-control" />
                        <span asp-validation-for="NumAdults" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumChildren" class="control-label">Number of Children</label>
                        <input asp-for="NumChildren" class="form-control" />
                        <span asp-validation-for="NumChildren" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TotalPrice" class="control-label">Total Price</label>
                        <input asp-for="TotalPrice" class="form-control" />
                        <span asp-validation-for="TotalPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TotalDays" class="control-label">Total Days</label>
                        <input asp-for="TotalDays" class="form-control" />
                        <span asp-validation-for="TotalDays" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SpecialRequest" class="control-label">Special Request</label>
                        <input asp-for="SpecialRequest" class="form-control" />
                        <span asp-validation-for="SpecialRequest" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaymentStatus" class="control-label">Payment Status</label>
                        <input asp-for="PaymentStatus" class="form-control" />
                        <span asp-validation-for="PaymentStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Book" class="btn btn-primary" style="background-color: #DFA974; border:none" />|
                        <a asp-action="Index" asp-controller="Home">Back to homepage</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
</section>
<br />
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
    function LoadCrs() {
        //var deptId = $(#Dept).val();
        var deptId = document.getElementById("HotelRoomId").value;

        var roomElement = document.getElementById("Courses");
