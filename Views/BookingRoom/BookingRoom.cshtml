@model BookingRoomOfferRoomTypeVM

@{
    ViewData["Title"] = "BookingRoom";
    Layout = "_Index";
    var today = DateTime.Today.ToString("MM-dd-yyyy");
    SelectList offerList = new SelectList(ViewBag.OfferList, "Id", "OfferName");
    SelectList floorList = new SelectList(ViewBag.FloorList, "Id", "FloorNum");
