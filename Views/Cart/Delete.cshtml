@model Cart

@{
    ViewData["Title"] = "Delete";
    Layout = "_Dashboard";

}

<!-- Breadcrumb Section Begin -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-text">
                <h2>Delete Cart</h2>
                <div class="bt-option">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-area="" asp-controller="Cart" asp-action="GetAllCart">All Carts</a>
                    <span>Delete</span>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!-- Breadcrumb Section End -->

<!-- Blog Section Begin -->
<div class="container">
    <h3>Are you sure you want to delete Dining @Model.Id</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <label asp-for="Id"> </label>
            </dt>
            <dd class="col-sm-10">
                @Model.ApplicationUser.UserName
            </dd>
            <dt class="col-sm-2">
                <label asp-for="ApplicationUser.UserName"> </label>
            </dt>
            <dd class="col-sm-10">
                @Model.ShippingPrice
            </dd>
            <dt class="col-sm-2">
                <label asp-for="ShippingPrice"> </label>
            </dt>     
        </dl>

        <form method="post" action="/Cart/ConfirmDelete/@Model.Id">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="GetAllCart" asp-controller="Cart" class="b-tag">Back to List</a>
        </form>
    </div>
</div>
